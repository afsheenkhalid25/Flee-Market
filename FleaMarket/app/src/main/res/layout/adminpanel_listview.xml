<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/adminpanel_img_marketpic"
        android:src="@drawable/marketpic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Market Name"
        android:paddingLeft="10dp"
        android:id="@+id/adminpanel_tv_marketname"
        android:textColor="@color/material_blue_grey_800"
        android:layout_alignTop="@+id/adminpanel_img_marketpic"
        android:layout_toRightOf="@+id/adminpanel_img_marketpic"
        android:layout_toEndOf="@+id/adminpanel_img_marketpic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="area"
        android:paddingLeft="10dp"
        android:id="@+id/adminpanel_tv_marketarea"
        android:layout_below="@+id/adminpanel_tv_marketname"
        android:layout_toRightOf="@+id/adminpanel_img_marketpic"
        android:layout_toEndOf="@+id/adminpanel_img_marketpic" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_next_item2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/adminpanel_img_marketdetails" />

</RelativeLayout>