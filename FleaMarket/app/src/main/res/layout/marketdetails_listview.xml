<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/marketdetails_img_marketpic"
        android:src="@drawable/marketpic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Market Name"
        android:paddingLeft="10dp"
        android:id="@+id/marketdetails_tv_shopname"
        android:textColor="@color/material_blue_grey_800"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/marketdetails_img_marketpic"
        android:layout_toEndOf="@+id/marketdetails_img_marketpic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Owner"
        android:paddingLeft="10dp"
        android:id="@+id/marketdetails_tv_shopowner"
        android:layout_below="@+id/marketdetails_tv_shopname"
        android:layout_alignLeft="@+id/marketdetails_tv_shopname"
        android:layout_alignStart="@+id/marketdetails_tv_shopname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Category"
        android:paddingLeft="10dp"
        android:id="@+id/marketdetails_tv_shopcategory"
        android:layout_below="@+id/marketdetails_tv_shopowner"
        android:layout_alignLeft="@+id/marketdetails_tv_shopowner"
        android:layout_alignStart="@+id/marketdetails_tv_shopowner" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_next_item2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/marketdetails_img_shopdetails"/>

</RelativeLayout>