<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fuuast.fyp.fleamarket.PendingShops">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/material_blue_grey_800"
        android:id="@+id/linearLayout"
        android:gravity="right" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_action_back"
            android:id="@+id/img_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="My Pending Shops"
            android:textColor="#FFFFFF"
            android:textSize="23dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Name"
        android:textStyle="bold"
        android:layout_below="@id/linearLayout"
        android:background="@color/material_grey_300"
        android:textColor="@color/material_blue_grey_800"
        android:id="@+id/tv_shopkeeper_name"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pendingShops_list"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_shopkeeper_name"
        android:background="@color/material_grey_100"
        android:layout_above="@+id/relativeLayout2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No shops pending"
        android:id="@+id/status"
        android:visibility="visible"
        android:layout_alignTop="@+id/pendingShops_list"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/material_grey_300"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout2" />

</RelativeLayout>
