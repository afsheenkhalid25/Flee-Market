<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/shop_pic"
        android:src="@drawable/shoppic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Shop Name"
        android:paddingLeft="10dp"
        android:id="@+id/shop_name"
        android:textColor="@color/material_blue_grey_800"
        android:layout_alignTop="@+id/img_options"
        android:layout_toRightOf="@+id/shop_pic"
        android:layout_toEndOf="@+id/shop_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="category1, category2, category3"
        android:paddingLeft="10dp"
        android:id="@+id/shop_category"
        android:layout_alignBottom="@+id/shop_pic"
        android:layout_alignLeft="@+id/shop_name"
        android:layout_alignStart="@+id/shop_name" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_overflow_dark"
        android:id="@+id/img_options"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/shop_category" />

</RelativeLayout>