<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fuuast.fyp.fleamarket.EditAdminProfile"
    android:id="@+id/rl_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/material_blue_grey_800"
        android:id="@+id/ll_titleBar"
        android:gravity="right" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="23dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_done"
            android:clickable="true"
            android:paddingRight="10dp"
            android:id="@+id/ep_img_done"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/scrollView"
        android:layout_below="@id/ll_titleBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_header"
                android:padding="10dp"
                android:layout_below="@+id/ll_titleBar"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/material_grey_300"
                android:outlineProvider="background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Email_ID"
                    android:textColor="@color/material_blue_grey_800"
                    android:id="@+id/ep_tv_email"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:background="@color/material_grey_300"
                android:layout_below="@+id/rl_header"
                android:id="@+id/ll_changeName"
                android:gravity="right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Change Name"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="23dp"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:id="@+id/editprofile_tv_name" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_name"
                android:inputType="textCapWords"
                android:hint="Name"
                android:layout_below="@+id/ll_changeName"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/material_grey_300"
                android:layout_below="@+id/et_name"
                android:id="@+id/rl_changePassword"
                android:gravity="right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Change Password"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="23dp"
                    android:padding="10dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_action_edit"
                    android:clickable="true"
                    android:paddingRight="10dp"
                    android:id="@+id/ep_img_edit"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_passwordMenu"
                android:outlineProvider="background"
                android:layout_below="@+id/rl_changePassword"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@android:color/transparent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/et_curpass"
                    android:hint="Type Current Password"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:enabled="false" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/et_newpass"
                    android:hint="New Password"
                    android:layout_below="@+id/et_curpass"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:enabled="false"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/et_retypPass"
                    android:hint="Retype Password"
                    android:layout_below="@+id/et_newpass"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:enabled="false"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/material_grey_300"
                android:layout_below="@+id/rl_passwordMenu"
                android:id="@+id/rl_changeOthers"
                android:gravity="right" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Change Others"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="23dp"
                    android:padding="10dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_othersMenu"
                android:layout_below="@+id/rl_changeOthers"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:background="@android:color/transparent"
                android:layout_weight="2.81">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:layout_marginTop="7dp"
                    android:ems="10"
                    android:id="@+id/ca_et_phone"
                    android:hint="Phone No" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:layout_marginTop="7dp"
                    android:ems="10"
                    android:id="@+id/ca_et_address"
                    android:hint="Address" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/ca_et_nic"
                    android:hint="NIC #"
                    android:enabled="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/ca_et_org_name"
                    android:hint="Organization"
                    android:enabled="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/ca_et_org_cntct"
                    android:hint="Organization Contact#"
                    android:enabled="true" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:id="@+id/rl_footer"
        android:layout_alignParentBottom="true"
        android:background="@color/material_grey_300"
        android:outlineProvider="background" />

</RelativeLayout>
