<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fuuast.fyp.fleamarket.ShopDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/material_blue_grey_800"
        android:gravity="right"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shop Details"
            android:textColor="#FFFFFF"
            android:textSize="23dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/ll" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:background="@color/material_grey_300"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shop:"
            android:id="@+id/shop_name"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Market:"
            android:id="@+id/market_name"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            android:layout_below="@+id/sd_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/sd_name"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/shop_name"
            android:layout_toRightOf="@+id/market_name"
            android:layout_toEndOf="@+id/market_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Market Name"
            android:id="@+id/sd_market"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/market_name"
            android:layout_toRightOf="@+id/market_name"
            android:layout_toEndOf="@+id/market_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Categories:"
            android:id="@+id/textView12"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/sd_market"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profilepic"
        android:clickable="true"
        android:id="@+id/img_cat1"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profilepic"
        android:clickable="true"
        android:id="@+id/img_cat2"
        android:layout_alignTop="@+id/img_cat1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profilepic"
        android:clickable="true"
        android:id="@+id/img_cat3"
        android:layout_alignTop="@+id/img_cat2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3"
        android:layout_below="@+id/img_cat1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Owner:"
            android:id="@+id/textView4"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contact:"
            android:id="@+id/textView6"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Organization:"
            android:id="@+id/textView7"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/sd_owner"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/sd_contact"
            android:layout_alignStart="@+id/sd_contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/sd_contact"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_above="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/sd_org"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:layout_alignBottom="@+id/textView7"
            android:layout_toRightOf="@+id/textView7"
            android:layout_toEndOf="@+id/textView7" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/relativeLayout3"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context="fuuast.fyp.fleamarket.ShopDetails"
        xmlns:tools="http://schemas.android.com/tools" >

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

    </RelativeLayout>

</RelativeLayout>

